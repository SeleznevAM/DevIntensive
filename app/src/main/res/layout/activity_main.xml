<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/grey"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="5"
                android:textSize="40dp"
                android:gravity="bottom|center"
                android:layout_marginBottom="0dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Рейтинг"
                android:gravity="top|center"
                android:textColor="@color/white"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="@color/grey_light"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="5"
                android:textSize="40dp"
                android:gravity="bottom|center"
                android:layout_marginBottom="0dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Написано строк кода"
                android:gravity="top|center"
                android:textColor="@color/white"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="@color/grey_light"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="5"
                android:textSize="40dp"
                android:gravity="bottom|center"
                android:layout_marginBottom="0dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Проектов"
                android:gravity="top|center"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:gravity="bottom"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="Мобильный телефон"
                    android:text="+79161161616"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/size_small_24"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/liner_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/size_large_72"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Адрес электронной почты"
                    android:text="myMail@domen.com"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/size_small_24"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/liner_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/size_large_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/vk_circle"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/vk_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:hint="Профиль в VK"
                    android:text="http://vk.com/id370575593"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_remove_red_eye_black_24dp"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/size_small_24"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/liner_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/size_large_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/github_circle"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/git_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:hint="Репозиторий"
                    android:text="SeleznevAM/DevIntensive"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_remove_red_eye_black_24dp"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/size_small_24"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/liner_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/size_large_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            android:layout_width="@dimen/size_small_24"
            android:layout_height="@dimen/size_small_24"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginLeft="@dimen/size_small_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="О Себе"
                    android:text="@string/about_me"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/liner_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/size_large_72"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
