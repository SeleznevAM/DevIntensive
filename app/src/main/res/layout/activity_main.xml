<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_drawer"
    tools:context=".ui.activities.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_coordinator_container"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/colorPrimary">
        
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collpsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary">
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_imge_size"
                android:fitsSystemWindows="true">

                <ImageView
                    android:id="@+id/user_foto_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_imge_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/layout_image"/>
                <RelativeLayout
                    android:id="@+id/profile_placeholder_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_background"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_profile_photo"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@+id/photo_placeholder_img"
                        android:layout_marginBottom="@dimen/spacing_small_8"/>
                    <ImageView
                        android:id="@+id/photo_placeholder_img"
                        android:layout_width="@dimen/placeholder_photo_size_90"
                        android:layout_height="@dimen/placeholder_photo_size_90"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/size_medium_56"/>
                </RelativeLayout>
            </FrameLayout>
            

            
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AppTheme.PopupOverlay"
                android:titleTextColor="@color/white"
                app:layout_collapseMode="pin" />
            
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/user_prifile_content"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/float_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_create_black_24dp"
        app:layout_anchor="@id/appBar_layout"
        app:layout_anchorGravity="bottom|right"
        android:layout_marginRight="@dimen/fab_margin_right"/>
</android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer_menu">

        </android.support.design.widget.NavigationView>
     </android.support.v4.widget.DrawerLayout>
