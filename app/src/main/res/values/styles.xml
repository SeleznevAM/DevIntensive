<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    
    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>
    
    <style name="icon_left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginLeft">@dimen/size_small_24</item>
    </style>
    
    <style name="center">
        <item name="android:layout_width"> 0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="vertical_gray_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="header_style">
        <item name="android:layout_height">172dp</item>
        <item name="android:paddingTop">@dimen/spacing_medial_24</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
        <item name="android:background">@drawable/header_bg</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="icon_right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item> <!-- Свойство для затемнения экрана -->

    </style>

</resources>
